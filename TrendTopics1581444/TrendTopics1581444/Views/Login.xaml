<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrendTopics1581444.Views.Login">
  <StackLayout Padding="20" Spacing="10" VerticalOptions="Center">
    <Label Text="Acesse com sua conta do Twitter" VerticalOptions="Center" HorizontalOptions="Center" />
    <Entry Placeholder="Login ou Senha"/>
